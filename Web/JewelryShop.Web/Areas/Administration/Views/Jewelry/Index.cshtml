@model  JewelryShop.Web.ViewModels.Administration.Jewelry.IndexViewModel
@{
    ViewData["Title"] = "Galilani";
}
@if (this.TempData["InfoMessage"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<a class="btn btn-primary stretched-link" asp-area="Administration" asp-controller="Jewelry" asp-action="Create">Добави продукт</a>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Снимка
            </th>
            <th>
                Име
            </th>
            <th>
                Цена
            </th>
            <th>
                Брой
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Jewelry)
        {
            <tr>
                <td>
                    <img src="@item.ImageUr" class="img-thumbnail" style="width:120px;"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактирай</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детайл</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>