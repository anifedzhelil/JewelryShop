@model JewelryShop.Web.ViewModels.ShoppingCart.IndexViewModel
    <h3>
        Съдържание на кошницата
    </h3>

@{ 
    decimal subtotal = 0;
}
<div class="container">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:50%" colspan="2">Продукт</th>
                <th style="width:15%">Цена</th>
                <th style="width:20%">Количество</th>
                <th style="width:15%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrdersDetails)
            {
                subtotal += item.CurrentPrice;
            <tr>
                <td data-th="ProductImage">
                    <img id="shoppingImage" src="@item.ImageUrl" alt="..." class="img-responsive" />
                </td>
                <td>
                    <a class="fa-linkedin" asp-action="Index" asp-route-id="@item.JewelId" asp-controller="ProductDetails">@item.JewelName</a>                     
                </td>
                <td data-th="Price"><span id="price">@item.CurrentPrice</span></td>
                <td data-th="Quantity">
                    <form method="post" asp-area="" asp-controller="ShoppingCart" asp-action="EditQuantity" asp-route-id="@item.Id" asp-route-quantity="quantity">
                        <div class="row">
                            <input type="number" id="quantity" name="quantity"  class="form-control form-control-sm col-sm-3" min="0" max="@item.JewelCount" value="@item.Quantity">
                            <button class="btn btn-info btn-sm" type="submit"><i class="fa fa-refresh"></i></button>
                        </div>
                    </form>
                </td>
                <td class="actions" data-th="">
                    <form method="post" asp-area="" asp-controller="ShoppingCart" asp-action="DeleteOrder" asp-route-id="@item.Id">
                        <button class="btn btn-danger btn-sm" asp-action="DeleteOrder" asp-route-id="@item.Id"><i class="fa fa-trash-o"></i></button>
                     </form>
                 </td>               
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td><a href="#" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
                <td></td>
                <td class="hidden-xs text-right"><strong>Сума @subtotal лв</strong></td>
                <td colspan="2"><a asp-action="LoadShippingAddress" class="btn btn-success btn-block">Checkout <i class="fa fa-angle-right"></i></a></td>
            </tr>
        </tfoot>
    </table>
</div>