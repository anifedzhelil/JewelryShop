@model JewelryShop.Web.ViewModels.ShippingAddresses.InputShippingAddressModel
<form method="post" asp-action="CreateShippingAddress" asp-controller="ShoppingCart" asp-area="" asp-route-id="@Model.Id">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="FirstName" class="control-label">Име</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="LastName" class="control-label">Фамилия</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label">Адрес 1</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdditionalAddress" class="control-label">Адрес 2</label>
            <input asp-for="AdditionalAddress" class="form-control" />
            <span asp-validation-for="AdditionalAddress" class="text-danger"></span>
        </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="City" class="control-label">Град/Село</label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Phone" class="control-label">Телефон</label>
            <input asp-for="Phone" class="form-control" type="tel" pattern="[0-9]*" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="PostCode" class="control-label">Пощенски  код</label>
            <input asp-for="PostCode" class="form-control" maxlength="4" type="number" pattern="[0-9]*" />
            <span asp-validation-for="PostCode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Добави" class="btn btn-primary" Valid />
        <a formnovalidate asp-action="ShippingAddress" asp-controller="ShoppingCart" asp-area="" class="btn btn-primary">Отказ</a>
    </div>
 </form>
